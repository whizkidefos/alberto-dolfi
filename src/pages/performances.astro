---
import Layout from "../layouts/Layout.astro";
import PageHeader from "../components/ui/PageHeader.astro";
import Section from "../components/ui/Section.astro";
import Calendar from "../components/performances/Calendar.svelte";
import UpcomingEvents from "../components/performances/UpcomingEvents.astro";

const events = [
	{
		title: "Piano Recital: Romantic Masterworks",
		date: "2024-06-15",
		time: "19:30",
		venue: "Carnegie Hall",
		location: "New York, NY",
		program: [
			'Beethoven: Sonata No. 23 "Appassionata"',
			"Chopin: Selected Nocturnes",
			"Liszt: Hungarian Rhapsody No. 2",
		],
		ticketUrl: "https://example.com/tickets",
		image:
			"https://images.unsplash.com/photo-1519682577862-22b62b24e493?auto=format&fit=crop&q=80",
	},
	{
		title: "Symphony Orchestra Concert",
		date: "2024-07-02",
		time: "20:00",
		venue: "Royal Albert Hall",
		location: "London, UK",
		program: [
			'Dolfi: Symphony No. 1 "Reflections"',
			"Brahms: Piano Concerto No. 2",
		],
		ticketUrl: "https://example.com/tickets-london",
		image:
			"https://images.unsplash.com/photo-1533174072545-7a4b6ad7a6c3?auto=format&fit=crop&q=80",
	},
];
---

<Layout title="Performances - Alberto Dolfi">
	<PageHeader
		title="Performances"
		subtitle="Concert schedule and upcoming events"
		backgroundImage="https://images.unsplash.com/photo-1520523839897-bd0b52f945a0?auto=format&fit=crop&q=80"
	/>

	<Section>
		<div class="max-w-4xl mx-auto mb-16">
			<Calendar client:load events={events} />
		</div>
	</Section>

	<Section title="Upcoming Performances" variant="alternate">
		<UpcomingEvents events={events} />
	</Section>
</Layout>
