---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/ui/Hero.astro";
import Section from "../components/ui/Section.astro";
import LatestWorks from "../components/home/LatestWorks.astro";
import UpcomingPerformances from "../components/home/UpcomingPerformances.astro";

const heroImage = "https://images.unsplash.com/photo-1519682577862-22b62b24e493?auto=format&fit=crop&q=80&w=2070";
---

<Layout title="Alberto Dolfi | Classical Pianist & Composer">
  <Hero
    title="Alberto Dolfi"
    subtitle="Composer • Pianist • Lecturer"
    accentText="Virtuoso"
    fullscreen
  >
    <div class="mt-8 flex justify-center gap-4">
      <a
        href="/performances"
        class="rounded-lg bg-accent px-4 py-2 text-white shadow-lg shadow-accent/25 transition hover:bg-accent/90"
      >
        View Performances
      </a>
      <a
        href="/works"
        class="rounded-lg bg-gray-800 px-4 py-2 text-white shadow-lg shadow-gray-800/25 transition hover:bg-gray-800/90 dark:bg-white dark:text-gray-900 dark:shadow-white/25 dark:hover:bg-white/90"
      >
        Explore Works
      </a>
    </div>
  </Hero>

  <div id="content">
    <Section title="Latest Works">
      <LatestWorks />
    </Section>

    <Section title="Upcoming Performances" variant="alternate">
      <UpcomingPerformances />
    </Section>
  </div>
</Layout>

<style>
  :global(html) {
    scroll-behavior: smooth;
  }
</style>

<script>
	const heroSection = document.querySelector("section:first-of-type");
	if (heroSection) {
		import('../utils/animations/hero.js').then(({ heroAnimation }) => {
			heroAnimation(heroSection);
		});
	}
</script>
