---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
---

<Layout title="Alberto Dolfi - Composer, Pianist, and Lecturer">
	<Hero />

	<section class="py-20 px-4">
		<div class="max-w-7xl mx-auto">
			<h2 class="text-4xl md:text-5xl font-playfair mb-12 text-center">
				Latest Works
			</h2>
			<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
				<!-- Latest works will be dynamically loaded here -->
			</div>
		</div>
	</section>

	<section class="py-20 px-4 bg-secondary text-primary">
		<div class="max-w-7xl mx-auto">
			<h2 class="text-4xl md:text-5xl font-playfair mb-12 text-center">
				Upcoming Performances
			</h2>
			<div class="space-y-8">
				<!-- Upcoming performances will be dynamically loaded here -->
			</div>
		</div>
	</section>
</Layout>
