---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import Section from "../components/ui/Section.astro";
import LatestWorks from "../components/home/LatestWorks.astro";
import UpcomingPerformances from "../components/home/UpcomingPerformances.astro";

const heroImage =
	"https://images.unsplash.com/photo-1520523839897-bd0b52f945a0?auto=format&fit=crop&q=80";
---

<Layout title="Alberto Dolfi - Composer, Pianist, and Lecturer">
	<Hero backgroundImage={heroImage} />

	<Section title="Latest Works">
		<LatestWorks />
	</Section>

	<Section title="Upcoming Performances" variant="alternate">
		<UpcomingPerformances />
	</Section>
</Layout>

<script>
	const heroSection = document.querySelector("section:first-of-type");
	if (heroSection) {
		import('../utils/animations/hero.js').then(({ heroAnimation }) => {
			heroAnimation(heroSection);
		});
	}
</script>
