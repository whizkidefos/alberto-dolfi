---
import Layout from "../layouts/Layout.astro";
import PageHeader from "../components/ui/PageHeader.astro";
import Section from "../components/ui/Section.astro";
import Timeline from "../components/biography/Timeline.astro";
import Awards from "../components/biography/Awards.astro";

const biographyImage =
	"https://images.unsplash.com/photo-1520523839897-bd0b52f945a0?auto=format&fit=crop&q=80";
const timelineImage =
	"https://images.unsplash.com/photo-1511735111819-9a3f7709049c?auto=format&fit=crop&q=80";
---

<Layout title="Biography - Alberto Dolfi">
	<PageHeader
		title="Biography"
		subtitle="A journey through music and composition"
		backgroundImage={biographyImage}
	/>

	<Section>
		<div
			class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center max-w-6xl mx-auto"
		>
			<div class="prose prose-invert">
				<p class="text-xl leading-relaxed mb-6">
					Alberto Dolfi is an internationally acclaimed composer and pianist,
					known for his innovative approach to contemporary classical music.
				</p>
				<p class="mb-6">
					Born in Florence, Italy, Dolfi began his musical journey at the age of
					five. His early exposure to both classical masters and contemporary
					composers shaped his unique musical perspective.
				</p>
				<p>
					Today, his works are performed by leading orchestras and ensembles
					worldwide, while his lectures and masterclasses continue to inspire
					the next generation of musicians.
				</p>
			</div>
			<div class="relative">
				<img
					src="https://images.unsplash.com/photo-1551225183-94acb7d595b6?auto=format&fit=crop&q=80"
					alt="Alberto Dolfi performing"
					class="rounded-lg shadow-xl"
				/>
			</div>
		</div>
	</Section>

	<Section title="Career Milestones" variant="alternate">
		<div class="relative">
			<div class="absolute inset-0 opacity-10">
				<img
					src={timelineImage}
					alt=""
					class="w-full h-full object-cover"
					aria-hidden="true"
				/>
			</div>
			<div class="relative z-10">
				<Timeline />
			</div>
		</div>
	</Section>

	<Section title="Awards & Recognition">
		<Awards />
	</Section>
</Layout>
