---
import Layout from "../layouts/Layout.astro";
import PageHeader from "../components/ui/PageHeader.astro";
import Section from "../components/ui/Section.astro";
import LectureCard from "../components/lectures/LectureCard.astro";

const lectures = [
	{
		title: "Contemporary Composition Techniques",
		date: "2024-03-15",
		description:
			"An exploration of modern compositional methods and their application in today's musical landscape.",
		videoUrl: "https://example.com/lecture-1",
		thumbnail: "/images/lectures/composition.jpg",
		topics: ["Composition", "Modern Music", "Techniques"],
		duration: "1:15:00",
	},
	{
		title: "The Evolution of Piano Music",
		date: "2024-02-28",
		description:
			"A journey through the history of piano composition from the Baroque era to contemporary times.",
		videoUrl: "https://example.com/lecture-2",
		thumbnail: "/images/lectures/piano-history.jpg",
		topics: ["Piano", "Music History", "Performance"],
		duration: "1:30:00",
	},
];
---

<Layout title="Lectures - Alberto Dolfi">
	<PageHeader
		title="Lectures & Masterclasses"
		subtitle="Educational content and musical insights"
		backgroundImage="/images/lectures-header.jpg"
	/>

	<Section>
		<div class="grid grid-cols-1 md:grid-cols-2 gap-8">
			{lectures.map((lecture) => <LectureCard lecture={lecture} />)}
		</div>
	</Section>
</Layout>
