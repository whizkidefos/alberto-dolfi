---
const navItems = [
	{ name: "Home", path: "/" },
	{ name: "Biography", path: "/biography" },
	{ name: "Works", path: "/works" },
	{ name: "Performances", path: "/performances" },
	{ name: "Lectures", path: "/lectures" },
	{ name: "Contact", path: "/contact" },
];
---

<nav class="fixed w-full z-50 bg-primary/90 backdrop-blur-sm">
	<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
		<div class="flex items-center justify-between h-20">
			<div class="flex-shrink-0">
				<a href="/" class="text-2xl font-playfair">Alberto Dolfi</a>
			</div>
			<div class="hidden md:block">
				<div class="ml-10 flex items-baseline space-x-8">
					{
						navItems.map((item) => (
							<a
								href={item.path}
								class="text-secondary/80 hover:text-secondary transition-colors duration-300"
							>
								{item.name}
							</a>
						))
					}
				</div>
			</div>
		</div>
	</div>
</nav>
