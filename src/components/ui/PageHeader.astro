---
interface Props {
	title: string;
	subtitle?: string;
	backgroundImage?: string;
}

const {
	title,
	subtitle,
	backgroundImage = "https://images.unsplash.com/photo-1520523839897-bd0b52f945a0?auto=format&fit=crop&q=80",
} = Astro.props;
---

<header
	class="relative h-[50vh] flex items-center justify-center overflow-hidden"
>
	<div class="absolute inset-0 z-0">
		<img
			src={backgroundImage}
			alt={title}
			class="w-full h-full object-cover opacity-40"
		/>
		<div class="absolute inset-0 bg-gradient-to-b from-primary/50 to-primary">
		</div>
	</div>
	<div class="relative z-10 text-center px-4">
		<h1 class="text-5xl md:text-6xl font-playfair mb-4 leading-tight">
			{title}
		</h1>
		{
			subtitle && (
				<p class="text-lg md:text-xl font-inter text-secondary/80 max-w-2xl mx-auto">
					{subtitle}
				</p>
			)
		}
	</div>
</header>
