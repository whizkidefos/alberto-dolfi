---
interface Props {
	title?: string;
	className?: string;
	variant?: "default" | "alternate";
}

const { title, className = "", variant = "default" } = Astro.props;

const bgClass =
	variant === "alternate"
		? "bg-secondary text-primary"
		: "bg-primary text-secondary";
---

<section class={`py-20 px-4 ${bgClass} ${className}`}>
	<div class="max-w-7xl mx-auto">
		{
			title && (
				<h2 class="text-4xl md:text-5xl font-playfair mb-12 text-center">
					{title}
				</h2>
			)
		}
		<slot />
	</div>
</section>
