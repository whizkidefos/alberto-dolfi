---
const currentYear = new Date().getFullYear();

const socialLinks = [
  {
    name: 'Instagram',
    href: '#',
    icon: `<path d="M12.315 2c2.43 0 2.784.013 3.808.06 1.064.049 1.791.218 2.427.465a4.902 4.902 0 011.772 1.153 4.902 4.902 0 011.153 1.772c.247.636.416 1.363.465 2.427.048 1.067.06 1.407.06 4.123v.08c0 2.643-.012 2.987-.06 4.043-.049 1.064-.218 1.791-.465 2.427a4.902 4.902 0 01-1.153 1.772 4.902 4.902 0 01-1.772 1.153c-.636.247-1.363.416-2.427.465-1.067.048-1.407.06-4.123.06h-.08c-2.643 0-2.987-.012-4.043-.06-1.064-.049-1.791-.218-2.427-.465a4.902 4.902 0 01-1.772-1.153 4.902 4.902 0 01-1.153-1.772c-.247-.636-.416-1.363-.465-2.427-.047-1.024-.06-1.379-.06-3.808v-.63c0-2.43.013-2.784.06-3.808.049-1.064.218-1.791.465-2.427a4.902 4.902 0 011.153-1.772A4.902 4.902 0 015.45 2.525c.636-.247 1.363-.416 2.427-.465C8.901 2.013 9.256 2 11.685 2h.63zm-.081 1.802h-.468c-2.456 0-2.784.011-3.807.058-.975.045-1.504.207-1.857.344-.467.182-.8.398-1.15.748-.35.35-.566.683-.748 1.15-.137.353-.3.882-.344 1.857-.047 1.023-.058 1.351-.058 3.807v.468c0 2.456.011 2.784.058 3.807.045.975.207 1.504.344 1.857.182.466.399.8.748 1.15.35.35.683.566 1.15.748.353.137.882.3 1.857.344 1.054.048 1.37.058 4.041.058h.08c2.597 0 2.917-.01 3.96-.058.976-.045 1.505-.207 1.858-.344.466-.182.8-.398 1.15-.748.35-.35.566-.683.748-1.15.137-.353.3-.882.344-1.857.048-1.055.058-1.37.058-4.041v-.08c0-2.597-.01-2.917-.058-3.96-.045-.976-.207-1.505-.344-1.858a3.097 3.097 0 00-.748-1.15 3.098 3.098 0 00-1.15-.748c-.353-.137-.882-.3-1.857-.344-1.023-.047-1.351-.058-3.807-.058zM12 6.865a5.135 5.135 0 110 10.27 5.135 5.135 0 010-10.27zm0 1.802a3.333 3.333 0 100 6.666 3.333 3.333 0 000-6.666zm5.338-3.205a1.2 1.2 0 110 2.4 1.2 1.2 0 010-2.4z"/>`,
  },
  {
    name: 'YouTube',
    href: '#',
    icon: `<path d="M19.615 3.184c-3.604-.246-11.631-.245-15.23 0-3.897.266-4.356 2.62-4.385 8.816.029 6.185.484 8.549 4.385 8.816 3.6.245 11.626.246 15.23 0 3.897-.266 4.356-2.62 4.385-8.816-.029-6.185-.484-8.549-4.385-8.816zm-10.615 12.816v-8l8 3.993-8 4.007z"/>`,
  },
  {
    name: 'Facebook',
    href: '#',
    icon: `<path d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z"/>`,
  },
];

const quickLinks = [
  { href: '/performances', label: 'Performances' },
  { href: '/about', label: 'About' },
  { href: '/contact', label: 'Contact' },
];

const legalLinks = [
  { href: '/privacy', label: 'Privacy Policy' },
  { href: '/terms', label: 'Terms of Service' },
  { href: '/cookies', label: 'Cookie Policy' },
];

const venues = [
  'Carnegie Hall, New York',
  'Royal Albert Hall, London',
  'Musikverein, Vienna',
  'Concertgebouw, Amsterdam',
  'Suntory Hall, Tokyo',
];

const contact = {
  email: 'contact@albertodolfi.com',
  phone: '+1 (555) 123-4567',
  address: 'Florence, Italy',
};
---

<footer class="mt-32 border-t border-gray-200/10">
  <div class="mx-auto max-w-7xl px-4 py-12 sm:px-6 lg:px-8">
    <div class="xl:grid xl:grid-cols-4 xl:gap-8">
      <!-- Brand -->
      <div class="space-y-8">
        <div class="flex items-center space-x-3">
          <span class="text-xl font-playfair font-bold tracking-tight">
            Alberto
            <span class="text-accent">Dolfi</span>
          </span>
          <div class="h-6 w-px bg-gradient-to-b from-transparent via-gray-300 to-transparent dark:via-gray-700"></div>
          <span class="text-sm text-gray-600 dark:text-gray-400">Pianist</span>
        </div>
        <p class="max-w-xs text-sm text-gray-600 dark:text-gray-400">
          Bringing classical music to life through innovative performances and compositions.
        </p>
        <div class="flex space-x-6">
          {socialLinks.map((item) => (
            <a
              href={item.href}
              class="text-gray-500 transition-colors hover:text-gray-900 dark:text-gray-400 dark:hover:text-white"
              target="_blank"
              rel="noopener noreferrer"
            >
              <span class="sr-only">{item.name}</span>
              <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <Fragment set:html={item.icon} />
              </svg>
            </a>
          ))}
        </div>
      </div>

      <!-- Quick Links -->
      <div class="mt-16 xl:mt-0">
        <h3 class="text-sm font-semibold text-gray-900 dark:text-white">Quick Links</h3>
        <ul class="mt-4 space-y-4">
          {quickLinks.map((item) => (
            <li>
              <a
                href={item.href}
                class="text-sm text-gray-600 transition-colors hover:text-gray-900 dark:text-gray-400 dark:hover:text-white"
              >
                {item.label}
              </a>
            </li>
          ))}
        </ul>
        <div class="mt-8">
          <h3 class="text-sm font-semibold text-gray-900 dark:text-white">Legal</h3>
          <ul class="mt-4 space-y-4">
            {legalLinks.map((item) => (
              <li>
                <a
                  href={item.href}
                  class="text-sm text-gray-600 transition-colors hover:text-gray-900 dark:text-gray-400 dark:hover:text-white"
                >
                  {item.label}
                </a>
              </li>
            ))}
          </ul>
        </div>
      </div>

      <!-- Venues -->
      <div class="mt-16 xl:mt-0">
        <h3 class="text-sm font-semibold text-gray-900 dark:text-white">Featured Venues</h3>
        <ul class="mt-4 space-y-4">
          {venues.map((venue) => (
            <li class="text-sm text-gray-600 dark:text-gray-400">{venue}</li>
          ))}
        </ul>
      </div>

      <!-- Contact -->
      <div class="mt-16 xl:mt-0">
        <h3 class="text-sm font-semibold text-gray-900 dark:text-white">Contact</h3>
        <ul class="mt-4 space-y-4">
          <li class="flex items-center text-sm text-gray-600 dark:text-gray-400">
            <svg class="mr-3 h-5 w-5" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M3 8L10.89 13.26C11.2187 13.4793 11.6049 13.5963 12 13.5963C12.3951 13.5963 12.7813 13.4793 13.11 13.26L21 8M5 19H19C19.5304 19 20.0391 18.7893 20.4142 18.4142C20.7893 18.0391 21 17.5304 21 17V7C21 6.46957 20.7893 5.96086 20.4142 5.58579C20.0391 5.21071 19.5304 5 19 5H5C4.46957 5 3.96086 5.21071 3.58579 5.58579C3.21071 5.96086 3 6.46957 3 7V17C3 17.5304 3.21071 18.0391 3.58579 18.4142C3.96086 18.7893 4.46957 19 5 19Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
            {contact.email}
          </li>
          <li class="flex items-center text-sm text-gray-600 dark:text-gray-400">
            <svg class="mr-3 h-5 w-5" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M3 5C3 3.89543 3.89543 3 5 3H8.27924C8.70967 3 9.09181 3.27543 9.22792 3.68377L10.7257 8.17721C10.8831 8.64932 10.6694 9.16531 10.2243 9.38787L7.96701 10.5165C9.06925 12.9612 11.0388 14.9308 13.4835 16.033L14.6121 13.7757C14.8347 13.3306 15.3507 13.1169 15.8228 13.2743L20.3162 14.7721C20.7246 14.9082 21 15.2903 21 15.7208V19C21 20.1046 20.1046 21 19 21H18C9.71573 21 3 14.2843 3 6V5Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
            {contact.phone}
          </li>
          <li class="flex items-center text-sm text-gray-600 dark:text-gray-400">
            <svg class="mr-3 h-5 w-5" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M17.6569 16.6569C16.7202 17.5935 14.7616 19.5521 13.4138 20.8999C12.6327 21.681 11.3677 21.6814 10.5866 20.9003C9.26234 19.576 7.34159 17.6553 6.34315 16.6569C3.21895 13.5327 3.21895 8.46734 6.34315 5.34315C9.46734 2.21895 14.5327 2.21895 17.6569 5.34315C20.781 8.46734 20.781 13.5327 17.6569 16.6569Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              <path d="M15 11C15 12.6569 13.6569 14 12 14C10.3431 14 9 12.6569 9 11C9 9.34315 10.3431 8 12 8C13.6569 8 15 9.34315 15 11Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
            {contact.address}
          </li>
        </ul>

        <div class="mt-8">
          <h3 class="text-sm font-semibold text-gray-900 dark:text-white">Subscribe to Newsletter</h3>
          <form class="mt-4">
            <div class="flex max-w-md gap-x-4">
              <label for="email-address" class="sr-only">Email address</label>
              <input
                id="email-address"
                name="email"
                type="email"
                autocomplete="email"
                required
                class="min-w-0 flex-auto rounded-md border-0 bg-white/5 px-3.5 py-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-accent dark:text-white dark:ring-gray-700 dark:focus:ring-accent sm:text-sm sm:leading-6"
                placeholder="Enter your email"
              />
              <button
                type="submit"
                class="flex-none rounded-md bg-accent px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-accent/80 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-accent"
              >
                Subscribe
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <div class="mt-12 border-t border-gray-200/10 pt-8">
      <p class="text-sm text-gray-600 dark:text-gray-400">
        &copy; {currentYear} Alberto Dolfi. All rights reserved.
      </p>
    </div>
  </div>
</footer>
