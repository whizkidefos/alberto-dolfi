---
const milestones = [
	{
		year: "2020",
		title: "International Piano Competition Winner",
		description: "First prize at the International Piano Competition in Vienna",
	},
	{
		year: "2018",
		title: "Debut Album Release",
		description: 'Release of first solo piano album "Reflections in Time"',
	},
	{
		year: "2015",
		title: "Royal Academy of Music",
		description: "Graduated with distinction from the Royal Academy of Music",
	},
];
---

<div class="space-y-12">
	{
		milestones.map((milestone) => (
			<div class="flex flex-col md:flex-row gap-6 items-start">
				<div class="md:w-32 font-playfair text-2xl text-accent">
					{milestone.year}
				</div>
				<div class="flex-1">
					<h3 class="text-xl font-playfair mb-2">{milestone.title}</h3>
					<p class="text-secondary/80">{milestone.description}</p>
				</div>
			</div>
		))
	}
</div>
